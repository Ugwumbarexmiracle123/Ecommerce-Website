    <section id="product1" class="section-p1">
      <div class="container-fluid">
        <div class="row">
          <!-- Update Modal -->
          <div
            class="modal fade"
            id="updateModal"
            tabindex="-1"
            aria-labelledby="updateModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="updateModalLabel">
                    Update Product
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <form id="addProductForm">
                    <input type="hidden" name="productId" />

                    <h4 class="fs-6">Product Name</h4>
                    <input
                      type="text"
                      name="updatedName"
                      placeholder="Nike Jordans"
                    />

                    <h4 class="fs-6">Image Url</h4>
                    <input
                      type="text"
                      name="updatedImage"
                      placeholder="Paste the image url"
                    />

                    <h4 class="fs-6">Price</h4>
                    <input type="number" name="updatedPrice" placeholder="0" />

                    <h4 class="fs-6">Rating</h4>
                    <input type="string" name="updatedRating" placeholder="0" />
                  </form>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Cancel
                  </button>
                  <button
                    type="button"
                    class="btn btn-primary"
                    onclick="updateProduct()"
                  >
                    Save changes
                  </button>
                </div>
              </div>
            </div>
          </div>
          <!-- Delete item Modal -->
          <div
            class="modal fade"
            id="deleteItemModal"
            tabindex="-1"
            aria-labelledby="deleteItemModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="deleteItemModalLabel">
                    Delete Product
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body center">
                  Are you sure?
                  <input type="text" id="deleteId" hidden />
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    No
                  </button>
                  <button
                    type="button"
                    class="btn btn-primary"
                    onclick="deleteItem()"
                  >
                    Yes
                  </button>
                </div>
              </div>
            </div>
          </div>
          <!-- Add new item Modal -->
          <div
            class="modal fade"
            id="addItemModal"
            tabindex="-1"
            aria-labelledby="addItemModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="addItemModalLabel">
                    Add Product
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <form>
                    <h4 class="fs-6">Product Name</h4>
                    <input type="text" name="name" placeholder="Nike Jordans" />

                    <h4 class="fs-6">Image Url</h4>
                    <input
                      type="text"
                      name="image"
                      placeholder="Paste the image url"
                    />

                    <h4 class="fs-6">Price</h4>
                    <input type="number" name="price" placeholder="0" />

                    <h4 class="fs-6">Rating</h4>
                    <input type="number" name="rating" placeholder="0" />
                  </form>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Cancel
                  </button>
                  <button
                    type="button"
                    class="btn btn-primary"
                    onclick="addProduct()"
                  >
                    Add
                  </button>
                </div>
              </div>
            </div>
          </div>

          <% for (let i = 0; i < products.length; i++) { %> <% const product
          =products[i]; %>

          <div class="col-md-3">
            <div class="pro-container">
              <div class="pro">
                <% if (typeof isAdmin !== 'undefined') { %>
                <div class="admin-controls">
                  <i
                    class="update-btn fa-solid fa-pen"
                    data-bs-toggle="modal"
                    data-bs-target="#updateModal"
                    onclick="updateItemToUpdate('<%= product._id %>')"
                  ></i>
                  <i
                    class="delete-btn fa-sharp fa-solid fa-trash"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteItemModal"
                    onclick="updateItemToDelete('<%= product._id %>')"
                  ></i>
                </div>
                <% } %>
                <a href="/product/<%= product._id %>">
                  <img
                    height="170vh"
                    src="<%= product.image %>"
                    alt=""
                    class="product-img"
                  />
                  <div class="des">
                    <h5 class="product-name"><%= product.name %></h5>
                    <span class="star <%=product.rating %>"></span>
                    <span class="star <%=product.rating %>"></span>
                    <span class="star <%=product.rating %>"></span>
                    <span class="star <%=product.rating %>"></span>
                    <span class="star <%=product.rating %>"></span>
                    <h4 class="price">$<%= product.price %></h4>
                  </div>
                </a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
      <!-- Admin controls to add an item -->
      <% if (typeof isAdmin !== 'undefined') { %>
      <div
        class="add-new-card"
        data-bs-toggle="modal"
        data-bs-target="#addItemModal"
      >
        <i class="fa-solid fa-plus"></i>
      </div>
      <% } %>
