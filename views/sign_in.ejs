<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="./sign_in.css" />
  </head>
  <body>
    <div class="container">
      <% if (typeof error !== 'undefined') { %>
      <h1><%= error %></h1>
      <% } %>
      <form action="/sign_in" method="post">
        <h2>Log In</h2>
        <div class="content">
          <div class="inputBox">
            <label for="email" type="email">Enter Email</label>
            <input
              type="email"
              name="email"
              placeholder="Krita Natasha"
              id="email"
            />
          </div>

          <div class="inputBox">
            <label for="password" type="password">Enter Password</label>
            <input
              type="password"
              name="password"
              placeholder="*****"
              id="password"
            />
          </div>

          <div class="button-container">
            <button type="submit" href="welcome.ejs">login</button>
          </div>

          <div class="button-container">
            <a type="submit" href="/register">Sign up</a>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
